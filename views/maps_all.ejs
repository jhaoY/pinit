<!DOCTYPE html>
<html lang="en">

<head>
  <title>All Maps</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous" />

  <!-- Font-awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
    integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>

<body>
  <%- include('partials/_header') %>

    <header>
      <h1>All Maps</h1>
    </header>
    <% maps.forEach(map => {%>

      <article class = map >
      <header class = profile-title>
        <p class = cover_pic><img src ="<%= map.coverurl %>"></p>
        <p class = map-title><a href="/map/<%= map.id %>"><h3><%= map.title %></h3></a></p>
      </header>
      <p class = description><%= map.description %></p>
      <footer class = icons>
        <% if (user_id) { %>
        <a href="/map/<%= map.id %>/edit">
          <button type="submit" class="edit-button">Edit</button>
        </a>
        <form action="/profile/<%= map.id %>/favoriteMap" method="post">
          <input type="hidden" name="mapId" value="<%= map.id %>">
          <button type="submit" class="favorite-button">Favorite</button>
        </form>
        <% } %>
      </footer>
      </article>

<%});%>
</body>

</html>
