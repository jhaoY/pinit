<!DOCTYPE html>
<html lang="en">

<head>
  <title>Profile</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
</head>

<body>
  <article>
    <h2>Favorites</h2>
    <ul>
        <% favorites.forEach(map => { %>
            <li><%= map.title %></li>
            <a href="/maps/<%= map.id %>/edit">
              <i class="profile-edit-icon"></i>
            </a>
            <form action="/maps/favorite" method="post">
              <input type="hidden" name="mapId" value="<%= map.id %>">
              <button type="submit" class="favorite-button">
                <i class="profile-fav-icon"></i>
              </button>
            </form>
            <form action="/maps/delete" method="post">
              <input type="hidden" name="mapId" value="<%= map.id %>">
              <button type="submit" class="delete-button">
                <i class="profile-delete-icon"></i>
              </button>
            </form>
        <% }); %>
    </ul>
  
    <h2>User Maps</h2>
    <ul>
        <% userMaps.forEach(map => { %>
            <li><%= map.title %></li>
            <a href="/maps/<%= map.id %>/edit">
              <i class="profile-edit-icon"></i>
            </a>
            <form action="/maps/favorite" method="post">
              <input type="hidden" name="mapId" value="<%= map.id %>">
              <button type="submit" class="favorite-button">
                <i class="profile-fav-icon"></i>
              </button>
            </form>
            <form action="/maps/delete" method="post">
              <input type="hidden" name="mapId" value="<%= map.id %>">
              <button type="submit" class="delete-button">
                <i class="profile-delete-icon"></i>
              </button>
            </form>
        <% }); %>
    </ul>
  
    <h2>Contributions</h2>
    <ul>
        <% contributions.forEach(map => { %>
            <li><%= map.title %></li>
            <a href="/maps/<%= map.id %>/edit">
              <i class="profile-edit-icon"></i>
            </a>
            <form action="/maps/favorite" method="post">
              <input type="hidden" name="mapId" value="<%= map.id %>">
              <button type="submit" class="favorite-button">
                <i class="profile-fav-icon"></i>
              </button>
            </form>
            <form action="/maps/delete" method="post">
              <input type="hidden" name="mapId" value="<%= map.id %>">
              <button type="submit" class="delete-button">
                <i class="profile-delete-icon"></i>
              </button>
            </form>
        <% }); %>
    </ul>
  </article>
</body>

</html>